      X
    </p>
    <div class="mt-12 space-y-5 text-center lg:space-y-10">
      <p class="text-lg font-bold md:text-2xl lg:text-3xl">
        Join Our Campus Ambassador Internship Program
      </p>
      <p class="md:text-lg lg:text-xl font-bold">
        Apply now and earn 5k-10k Upto per month
      </p>
      <button
        class="bg-white text-black py-2 px-5 rounded-full font-bold md:py-3 md:px-10 md:text-lg"
        id="opencampusform" onclick="openCampusForm()"
      >
        Apply Now
      </button>
    </div>
  </div>
</div>

<!-- form -->
<form method="post" action="/campusambassador">
  <div
    class="absolute hidden w-full lg:w-full top-10 lg:top-32"
    id="campusform"
  >
    <div
      class="bg-white p-5 lg:pb-10 lg:px-10 rounded-lg mx-auto w-[90vw] lg:w-[60vw] mb-10 shadow-lg hover:shadow-2xl flex flex-col"
    >
      <p
        class="text-right mx-5 text-3xl cursor-pointer lg:-mr-5 lg:-mt-3"
        id="closecampusform"
        onclick="closeCampusForm()"
      >
        X
      </p>
      <p
        class="sm:text-lg md:text-2xl text-center font-extrabold lg:text-left lg:-mt-3"
      >
        Please fill in below form fields and send us your Enquiry
      </p>

      <div class="flex flex-col gap-5 my-10">
        <div class="flex flex-col gap-2">
          <label for="number" class="mx-2 lg:mx-0">Name*</label>
          <input
            type="name"
            name="name"
            id="mobile"
            required
            class="border-2 border-gray-300 rounded-lg p-2 mx-2 md:w-[24rem] md:w-full md:mx-auto"
            placeholder="John Doe"
          />
        </div>
        <div class="flex flex-col gap-2">
          <label for="number" class="mx-2 lg:mx-0">Email*</label>
          <input
            type="email"
            name="email"
            id="mobile"
            required
            class="border-2 border-gray-300 rounded-lg p-2 mx-2 md:w-[24rem] md:w-full md:mx-auto"
            placeholder="johndoe@gmail.com"
          />
        </div>
        <div class="flex flex-col gap-2">
          <label for="number" class="mx-2 lg:mx-0">Phone Number*</label>
          <div class="flex w-full gap-3">
            <input
              type="tel"
              name="phoneCode"
              value="+91"
              class="border-2 border-gray-300 rounded-lg p-2 w-14"
            />
            <input
              type="tel"
              name="phone"
              id="mobile"
              required
              class="border-2 border-gray-300 rounded-lg p-2 w-full mx-2 md:w-[24rem] md:w-full md:mx-auto"
              placeholder="123456789"
            />
          </div>
        </div>
        <div class="flex flex-col gap-2">
          <label for="college" class="mx-2 lg:mx-0">College Name*</label>
          <input
            type="text"
            name="college"
            id="college"
            required
            class="border-2 border-gray-300 rounded-lg p-2 mx-2 md:w-[24rem] md:w-full md:mx-auto"
            placeholder="Indian Institute of Technology"
          />
        </div>
        <div class="flex flex-col gap-2">
          <label for="college" class="mx-2 lg:mx-0">Branch*</label>
          <input
            type="text"
            name="branch"
            id="college"
            required
            class="border-2 border-gray-300 rounded-lg p-2 mx-2 md:w-[24rem] md:w-full md:mx-auto"
            placeholder="Computer Science"
          />
        </div>
        <div class="flex flex-col gap-2">
          <label for="college" class="mx-2 lg:mx-0">Year*</label>
          <input
            type="number"
            name="year"
            id="college"
            required
            class="border-2 border-gray-300 rounded-lg p-2 mx-2 md:w-[24rem] md:w-full md:mx-auto"
            placeholder="1"
          />
        </div>
        <div class="flex flex-col gap-2">
          <label for="college" class="mx-2 lg:mx-0">Location*</label>
          <input
            type="text"
            name="location"
            id="college"
            required
            class="border-2 border-gray-300 rounded-lg p-2 mx-2 md:w-[24rem] md:w-full md:mx-auto"
            placeholder="Mumbai"
          />
        </div>

        <button
          class="bg-dark text-white rounded-lg font-bold w-fit mt-7 py-2 px-7 md:py-3 md:px-10 sm:text-lg md:text-xl"
        >
          Submit
        </button>
      </div>
    </div>
  </div>
</form>
<script>
  var struct = document.getElementById("struct");
  var main = document.getElementById("main");

  const setCampusCardSession = () => {
    sessionStorage.setItem("openCampusCard", "false");
  };

  // open campus card by default
  if (sessionStorage.getItem("openCampusCard") === "false") {
    document.getElementById("campuscard").style.display = "none";
  } else {
    document.getElementById("campuscard").style.display = "flex";
    // bg opacity reduced
    struct.style.opacity = "0.2";
    struct.style.pointerEvents = "none";
    main.style.opacity = "0.2";
    main.style.pointerEvents = "none";
  }

  // close campus card
  const closecampuspopup = () => {
    document.getElementById("campuscard").style.display = "none";
    struct.style.opacity = "1";
    struct.style.pointerEvents = "auto";
    main.style.opacity = "1";
    main.style.pointerEvents = "auto";
    setCampusCardSession();
  };

  // open campus form
  const openCampusForm = () => {
    closecampuspopup();
    struct.style.opacity = "0.2";
    struct.style.pointerEvents = "none";
    main.style.opacity = "0.2";
    main.style.pointerEvents = "none";
    document.getElementById("campusform").style.display = "block";
  };

  // close campus form
  const closeCampusForm = () => {
    document.getElementById("campusform").style.display = "none";
    struct.style.opacity = "1";
    struct.style.pointerEvents = "auto";
    main.style.opacity = "1";
    main.style.pointerEvents = "auto";
  };

