<div
  class="w-full flex justify-center absolute top-24 lg:top-36 mx-auto hidden"
  id="campuscard"
>
  <div
    class="bg-dark bg-opacity-95 text-white absolute p-5 rounded-lg md:h-[20rem] md:w-[80vw] lg:h-[30rem] lg:w-[55rem] flex items-center justify-center"
  >
    <p
      class="w-fit text-xl absolute top-5 right-10 cursor-pointer md:text-3xl lg:text-4xl"
      id="closecampuscard"
      onclick="closecampuspopup()"
